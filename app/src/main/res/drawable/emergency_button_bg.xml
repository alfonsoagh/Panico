<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Sombra exterior -->
            <item android:left="2dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/black_overlay" />
                    <size android:width="220dp" android:height="220dp" />
                </shape>
            </item>

            <!-- Botón principal -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="45"
                        android:startColor="@color/gradient_end"
                        android:endColor="@color/gradient_start"
                        android:type="linear" />
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                    <size android:width="220dp" android:height="220dp" />
                </shape>
            </item>

            <!-- Anillo interno pulsante -->
            <item android:bottom="12dp" android:right="12dp"
                android:left="10dp" android:top="10dp">
                <shape android:shape="oval">
                    <stroke
                        android:width="2dp"
                        android:color="@color/white"
                        android:dashWidth="10dp"
                        android:dashGap="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Estado normal -->
    <item>
        <layer-list>
            <!-- Sombra exterior -->
            <item android:left="4dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/black_overlay" />
                    <size android:width="220dp" android:height="220dp" />
                </shape>
            </item>

            <!-- Botón principal -->
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/gradient_start"
                        android:endColor="@color/gradient_end"
                        android:type="linear" />
                    <stroke
                        android:width="3dp"
                        android:color="@color/white" />
                    <size android:width="220dp" android:height="220dp" />
                </shape>
            </item>

            <!-- Brillo superior -->
            <item android:bottom="140dp" android:right="40dp"
                android:left="36dp" android:top="36dp">
                <shape android:shape="oval">
                    <solid android:color="#33FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>